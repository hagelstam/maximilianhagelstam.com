---
import { Image } from 'astro:assets'
import Icon from '../components/Icons.astro'
import Layout from '../layouts/Layout.astro'
import { config } from '../config'
import avatar from '../assets/avatar.jpg'
---

<Layout title={config.site.title} header="Maximilian Hagelstam">
  <p class="-mt-3 max-w-[460px] text-neutral-200">
    Hey, I'm MaximilianðŸ‘‹<br />Welcome to my website.
  </p>
  <div class="my-8 flex flex-col items-start md:flex-row md:items-center">
    <Image
      src={avatar}
      alt="Maximilian Hagelstam"
      width={120}
      height={120}
      loading="eager"
      decoding="async"
      class="rounded-full grayscale"
    />
  </div>

  <div class="mt-8">
    <h2 class="mb-4 text-neutral-200">Find me on:</h2>
    <div class="flex items-center gap-6">
      <a
        href={config.social.github}
        target="_blank"
        rel="noopener noreferrer"
        class="text-neutral-400 transition-all hover:text-neutral-200"
        title="GitHub"
      >
        <Icon name="github" class="h-6 w-6" />
      </a>
      <a
        href={config.social.linkedin}
        target="_blank"
        rel="noopener noreferrer"
        class="text-neutral-400 transition-all hover:text-neutral-200"
        title="LinkedIn"
      >
        <Icon name="linkedin" class="h-6 w-6" />
      </a>
    </div>
  </div>
</Layout>
